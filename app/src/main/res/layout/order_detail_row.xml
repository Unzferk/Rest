<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/bordelat"
    android:layout_marginEnd="@dimen/bordelat"
    android:layout_marginTop="@dimen/bordeext">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/textView6"
            android:layout_width="112dp"
            android:layout_height="match_parent"
            android:text="Pedido"
            android:textSize="@dimen/titulo"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cant"
            android:textSize="@dimen/titulo"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="P. U."
            android:textSize="@dimen/titulo"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="P. T."
            android:textSize="@dimen/titulo"
            android:textStyle="bold"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/det_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/name"
            android:textSize="@dimen/elemOrden" />

        <TextView
            android:id="@+id/det_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/amount"
            android:textSize="@dimen/tamCont" />

        <TextView
            android:id="@+id/det_p_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/empty"
            android:textSize="@dimen/tamCont" />

        <TextView
            android:id="@+id/det_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/empty"
            android:textSize="@dimen/tamCont" />

    </TableRow>

</TableLayout>